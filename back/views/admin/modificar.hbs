<div class="contanter" style="margin: 100px 0">
    <div class="row">
        <div class="col-6 offset-3" style="text-align: left;">
            <h4>Modificar la novedad</h4>
            <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control"
                        name="titulo">
                </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <textarea placeholder="Subtitulo" class="form-control"
                        name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label> <input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea placeholder="Cuerpo" class="form-control" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="margin: 10px">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>